---
import { siteConfig } from "../../config/site";
import GsapReveal from "../widgets/GsapReveal.astro";
---

<footer class="relative overflow-hidden">

  <!-- BIS REPETITA watermark collÃ© en bas, pleine largeur -->
  <div class="absolute bottom-0 left-0 right-0 pointer-events-none select-none leading-[0.75]" aria-hidden="true" style="transform: translateY(15%);">
    <span class="block text-center uppercase text-white/[0.04] w-full" style="font-family: 'LASVALLES', 'Roboto Condensed', sans-serif; font-size: clamp(18rem, 45vw, 60rem); letter-spacing: -0.02em;">
      {siteConfig.name.toUpperCase()}
    </span>
  </div>

  <!-- Contenu footer -->
  <div class="relative z-10 mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 pt-24 md:pt-32 lg:pt-40 pb-24 md:pb-32">

    <!-- Grid asymetrique -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-[1.5fr_1fr_1fr_auto] gap-12 lg:gap-16">

      <!-- Brand (large) -->
      <GsapReveal animation="fadeUp" delay={0}>
        <div>
          <div>
            <img src="/logo-grand.svg" alt={siteConfig.name} class="h-48 w-auto invert" />
          </div>
        </div>
      </GsapReveal>

      <!-- Programmes -->
      <GsapReveal animation="fadeUp" delay={0.1}>
        <div>
          <div class="text-primary section-label mb-6">
            Programmes
          </div>
          <ul class="space-y-4">
            {siteConfig.footerLinks.services.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-white/60 transition-all duration-300 hover:text-primary hover:translate-x-1 inline-block"
                >
                  {link.text}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </GsapReveal>

      <!-- Infos -->
      <GsapReveal animation="fadeUp" delay={0.2}>
        <div>
          <div class="text-primary section-label mb-6">
            Informations
          </div>
          <ul class="space-y-4">
            {siteConfig.footerLinks.infos.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-white/60 transition-all duration-300 hover:text-primary hover:translate-x-1 inline-block"
                >
                  {link.text}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </GsapReveal>

      <!-- Contact + Socials -->
      <GsapReveal animation="fadeUp" delay={0.3}>
        <div>
          <div class="text-primary section-label mb-6">
            Contact
          </div>
          <ul class="space-y-4 text-sm text-white/60">
            <li>{siteConfig.contact.address}</li>
            <li>
              <a
                href={`tel:${siteConfig.contact.phone.replace(/\s/g, "")}`}
                class="transition-all duration-300 hover:text-primary hover:translate-x-1 inline-block"
              >
                {siteConfig.contact.phone}
              </a>
            </li>
            <li>
              <a
                href={`mailto:${siteConfig.contact.email}`}
                class="transition-all duration-300 hover:text-primary hover:translate-x-1 inline-block"
              >
                {siteConfig.contact.email}
              </a>
            </li>
          </ul>
          <div class="flex items-center gap-4 mt-8">
            <a
              href={siteConfig.socialLinks.instagram}
              target="_blank"
              rel="noopener noreferrer"
              class="group w-10 h-10 rounded-full border border-white/20 flex items-center justify-center text-white/60 transition-all duration-300 hover:border-primary hover:text-primary hover:shadow-[var(--shadow-gold-icon)]"
              aria-label="Instagram"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z" />
              </svg>
            </a>
            <a
              href={siteConfig.socialLinks.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="group w-10 h-10 rounded-full border border-white/20 flex items-center justify-center text-white/60 transition-all duration-300 hover:border-primary hover:text-primary hover:shadow-[var(--shadow-gold-icon)]"
              aria-label="LinkedIn"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
              </svg>
            </a>
          </div>
        </div>
      </GsapReveal>

    </div>

    <!-- Double separateur dore -->
    <div class="mt-16 md:mt-24 mb-8 space-y-2">
      <div class="h-px bg-primary/20" />
      <div class="w-32 h-px bg-primary/50 mx-auto" />
    </div>

    <!-- Copyright -->
    <div class="text-center text-xs text-white/40">
      &copy; {new Date().getFullYear()} {siteConfig.name}. Tous droits r&eacute;serv&eacute;s.
    </div>
  </div>
</footer>
