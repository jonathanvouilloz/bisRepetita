---
interface Props {
    variant?: "pill" | "circle";
    class?: string;
}

const { variant = "pill", class: className = "" } = Astro.props;

const base = "inline-flex items-center bg-primary/10 text-primary text-xs font-medium";
const variants = {
    pill: "px-3 py-1 rounded-full",
    circle: "w-8 h-8 rounded-full justify-center",
};
---

<span class:list={[base, variants[variant], className]}>
    <slot />
</span>
