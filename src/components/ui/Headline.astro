---
import type { HeadlineProps } from "../../types/types";
import SectionTitle from "./SectionTitle.astro";

const {
    title = await Astro.slots.render("title"),
    subtitle = await Astro.slots.render("subtitle"),
    tagline,
    classes = {},
    titleAs = "h2",
    align = "left",
} = Astro.props as HeadlineProps;

const {
    container: containerClass = "max-w-xl",
    title: titleClass = "text-4xl md:text-5xl",
} = classes;

// Preserve old Headline's title styling: base + custom/default size
const resolvedTitleClass = `font-medium tracking-tight text-foreground mb-4 ${titleClass}`;
---

{
    (title || subtitle || tagline) && (
        <div class={`mb-4 ${containerClass}`}>
            <SectionTitle
                badge={tagline}
                title={title}
                subtitle={subtitle}
                align={align}
                as={titleAs as "h1" | "h2" | "h3"}
                titleClass={resolvedTitleClass}
            />
        </div>
    )
}
