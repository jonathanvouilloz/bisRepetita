---
import WidgetWrapper from "./WidgetWrapper.astro";
import { siteConfig } from "../../config/site";

interface Props {
    id?: string;
    isDark?: boolean;
    classes?: Record<string, string>;
    bg?: string;
}

const { id, isDark = false, classes = {}, bg } = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} bg={bg} classes={classes}>
    <div class="grid gap-8 md:grid-cols-2">
        <div class="rounded-2xl overflow-hidden border border-border aspect-video md:aspect-auto">
            <iframe
                src={siteConfig.maps.embedUrl}
                width="100%"
                height="100%"
                style="border:0;min-height:300px;filter:invert(90%) hue-rotate(180deg);"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                title="Localisation Bis Repetita"
            ></iframe>
        </div>
        <div class="flex flex-col justify-center">
            <h3 class="text-2xl font-bold font-display text-foreground mb-6">
                Nous trouver
            </h3>
            <div class="space-y-4">
                <div class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-primary mt-0.5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    <div>
                        <p class="font-medium text-foreground">Adresse</p>
                        <p class="text-muted-foreground">{siteConfig.contact.address}</p>
                    </div>
                </div>
                <div class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-primary mt-0.5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                    <div>
                        <p class="font-medium text-foreground">Telephone</p>
                        <a href={`tel:${siteConfig.contact.phone.replace(/\s/g, "")}`} class="text-muted-foreground hover:text-primary transition-colors">
                            {siteConfig.contact.phone}
                        </a>
                    </div>
                </div>
                <div class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-primary mt-0.5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    <div>
                        <p class="font-medium text-foreground">Email</p>
                        <a href={`mailto:${siteConfig.contact.email}`} class="text-muted-foreground hover:text-primary transition-colors">
                            {siteConfig.contact.email}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</WidgetWrapper>
