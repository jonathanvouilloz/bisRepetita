---
import type { Widget } from "../../types/types";

const {
    id,
    isDark = false,
    containerClass = "",
    bg = "",
    classes = {},
    fullBleed = false,
} = Astro.props as Widget;

const wrapperClasses = {
    container: containerClass,
    ...classes,
};
---

<div
    id={id}
    class:list={["relative not-prose scroll-mt-[72px]", bg, { dark: isDark }]}
>
    <div
        class:list={[
            fullBleed
                ? "relative px-4 md:px-6 text-default py-16 md:py-24"
                : "relative mx-auto max-w-7xl px-4 md:px-6 text-default py-16 md:py-24",
            wrapperClasses.container,
        ]}
    >
        <slot />
    </div>
</div>
