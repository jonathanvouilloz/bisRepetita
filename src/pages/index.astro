---
import BaseLayout from "../layouts/BaseLayout.astro";
import { siteConfig } from "../config/site";
import Hero from "../components/widgets/Hero.astro";
import Stats from "../components/widgets/Stats.astro";
import ServiceCard from "../components/widgets/ServiceCard.astro";
import ContentShowcase from "../components/widgets/ContentShowcase.astro";
import Testimonials from "../components/widgets/Testimonials.astro";
import CTABanner from "../components/widgets/CTABanner.astro";
import GsapReveal from "../components/widgets/GsapReveal.astro";
import SectionTitle from "../components/ui/SectionTitle.astro";
import Container from "../components/ui/Container.astro";

import Schema from "../components/seo/Schema.astro";
import heroImage from "../assets/homepage.webp";
import coursPortrait from "../assets/cours-portrait.webp";
import coursLandscape from "../assets/cours-2-landscape.webp";

const metadata = {
    title: "Bis Repetita — Studio de boxe premium à Genève",
    description:
        "Studio de boxe premium à Genève. Coaching privé, cours collectifs Round by Round et programmes corporate avec Nicolas de Boccard. Première séance offerte.",
    ignoreTitleTemplate: true,
};

const services = [
    {
        title: "Coaching Privé",
        description:
            "Séances individuelles ou en petit groupe (jusqu'à 6 personnes). Un accompagnement sur mesure adapté à vos objectifs.",
        href: "/services/coaching-prive",
        image: coursPortrait,
        index: 1,
    },
    {
        title: "Round by Round",
        description:
            "Cours collectifs structurés en rounds. Une méthode unique qui allie technique de boxe, cardio et renforcement.",
        href: "/services/round-by-round",
        index: 2,
    },
    {
        title: "Corporate",
        description:
            "Team building, séances bien-être et programmes sur mesure pour les entreprises. Renforcez la cohésion de vos équipes.",
        href: "/services/corporate",
        index: 3,
    },
];

const stats = [
    {
        value: "500+",
        label: "Athlètes entraînés",
        description: "Depuis plus de 15 ans, nous accompagnons des athlètes de tous niveaux vers l'excellence.",
    },
    {
        value: "98%",
        label: "Taux de satisfaction",
        description: "La quasi-totalité de nos clients constatent des progrès significatifs, physiques et mentaux.",
    },
    {
        value: "15+",
        label: "Années d'expérience",
        description: "Une équipe de professionnels aguerris avec une expertise approfondie de la boxe.",
    },
];

const testimonials = [
    {
        quote: "Nicolas a transformé ma vision de la boxe. Bien plus qu'un sport, c'est devenu une discipline de vie. Les séances sont exigeantes mais toujours bienveillantes.",
        name: "Laurent M.",
        role: "Dirigeant d'entreprise",
    },
    {
        quote: "Le studio Bis Repetita est un écrin. L'ambiance, les équipements, l'encadrement — tout est pensé pour vous pousser à donner le meilleur de vous-même.",
        name: "Sophie D.",
        role: "Avocate",
    },
    {
        quote: "Les séances corporate ont eu un impact énorme sur la cohésion de notre équipe. Un format original et ultra-efficace.",
        name: "Marc T.",
        role: "CEO, startup tech",
    },
    {
        quote: "Un cadre exceptionnel et un coach hors pair. Je recommande à 100%.",
        name: "Claire B.",
        role: "Médecin",
    },
    {
        quote: "La méthode Round by Round est addictive. On progresse sans s'en rendre compte.",
        name: "Thomas R.",
        role: "Entrepreneur",
    },
    {
        quote: "Après 6 mois chez Bis Repetita, j'ai gagné en confiance, en posture et en énergie. Le coaching privé est d'une qualité rare.",
        name: "Julie F.",
        role: "Architecte",
    },
    {
        quote: "Je cherchais un sport exigeant mais accessible. La boxe avec Nicolas, c'est exactement ça. On se dépasse à chaque séance.",
        name: "Antoine G.",
        role: "Consultant",
    },
    {
        quote: "Mes enfants adorent les cours juniors. Nicolas sait transmettre les valeurs du ring avec pédagogie et bienveillance.",
        name: "Nathalie P.",
        role: "Mère de famille",
    },
    {
        quote: "L'approche est unique : technique, mental, physique. Tout est lié. On ressort de chaque séance transformé.",
        name: "David K.",
        role: "Banquier",
    },
];
---

<BaseLayout {metadata}>
    <Fragment slot="head">
        <Schema type="SportsActivityLocation" data={{}} />
    </Fragment>
    <Hero
        title={`Votre studio de <br class="hidden md:block" /> <span class="text-primary">boxe premium</span> à Genève`}
        description="Découvrez la boxe dans un cadre d'exception. Coaching privé, cours collectifs et programmes corporate avec Nicolas de Boccard."
        image={heroImage}
        actions={[
            {
                text: "Réserver une séance",
                href: "/contact",
                variant: "primary",
                icon: "lucide:arrow-right",
            },
            {
                text: "Découvrir le studio",
                href: "/studio",
                variant: "secondary",
                icon: "lucide:play",
                ariaLabel: "En savoir plus sur le studio",
            },
        ]}
        socialProof={{
            avatars: [
                "https://i.pravatar.cc/80?img=12",
                "https://i.pravatar.cc/80?img=32",
                "https://i.pravatar.cc/80?img=47",
            ],
            badge: "10K+",
            text: "99% de nos clients ont atteint leurs objectifs",
        }}
    />

    <Stats
        stats={stats}
        badge="Découvrir la salle"
        badgeHref="/studio"
        intro="Chez Bis Repetita, nous sommes une équipe de passionnés qui accompagnent plus de 500 athlètes depuis 2010 à révéler leur potentiel, atteindre leurs objectifs et élever leur performance."
    />

    <Container class="py-16 md:py-24">
        <SectionTitle
            badge="Nos services"
            title="Une approche <span class='text-primary'>complète</span>"
            class="mb-12"
        />
        <div class="grid gap-8 md:grid-cols-3 gsap-stagger-cards">
            {services.map((service, i) => (
                <ServiceCard service={service} index={i + 1} />
            ))}
        </div>
    </Container>

    <!-- Fixed background image window -->
    <div
        class="h-[50vh] md:h-[60vh] bg-fixed bg-cover bg-center mt-16 md:mt-24"
        style={`background-image: url('${coursLandscape.src}')`}
        role="img"
        aria-label="Studio Bis Repetita"
    >
        <div class="w-full h-full bg-black/40"></div>
    </div>

    <div class="py-16 md:py-24">
    <GsapReveal animation="fadeUp">
        <ContentShowcase
            tagline="Philosophie"
            title="La répétition mène à la maîtrise"
            items={[
                {
                    title: "Discipline & Rigueur",
                    description:
                        "Chaque séance est construite autour de fondamentaux techniques répétés jusqu'à l'excellence.",
                    icon: "lucide:shield",
                },
                {
                    title: "Encadrement Premium",
                    description:
                        "Un suivi personnalisé par Nicolas de Boccard, coach certifié avec plus de 15 ans d'expérience.",
                    icon: "lucide:crown",
                },
                {
                    title: "Résultats Mesurables",
                    description:
                        "Condition physique, confiance en soi, gestion du stress — des bénéfices concrets dès les premières séances.",
                    icon: "lucide:trending-up",
                },
            ]}
        >
            <Fragment>
                <h3 class="text-2xl font-bold tracking-tight sm:text-3xl mb-2 font-display">
                    Bis Repetita — <span class="text-primary">la voie de l'excellence</span>
                </h3>
                La boxe est bien plus qu'un sport de combat. C'est une école de vie qui enseigne la discipline, le respect et le dépassement de soi. Au studio Bis Repetita, nous cultivons cette philosophie dans un cadre d'exception.
            </Fragment>
        </ContentShowcase>
    </GsapReveal>
    </div>

    <GsapReveal animation="fadeUp">
        <Testimonials
            tagline="Temoignages"
            title="Ce que disent nos clients"
            testimonials={testimonials}
            rating={{ score: "4.8", stars: 5, count: "500+", source: "Google" }}
        />
    </GsapReveal>

    <div class="mt-8 md:mt-16"></div>

    <GsapReveal animation="fadeUp">
        <CTABanner
            title="Prêt à enfiler les gants et vous dépasser ?"
            subtitle="Votre premier round"
            cta={{ text: "Réserver", href: "/contact" }}
            variant="brushed-full"
        />
    </GsapReveal>
</BaseLayout>
