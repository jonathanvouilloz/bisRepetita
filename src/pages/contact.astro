---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/widgets/Hero.astro";
import FormSection from "../components/widgets/FormSection.astro";
import LocationMap from "../components/widgets/LocationMap.astro";
import GsapReveal from "../components/widgets/GsapReveal.astro";

const metadata = {
    title: "Contactez notre studio de boxe à Genève",
    description:
        "Réservez votre séance de boxe chez Bis Repetita à Genève. Coaching privé, cours collectifs ou programme corporate — nous vous répondons sous 24h.",
};
---

<BaseLayout {metadata}>
    <Hero
        title={`Nous <span class="font-display text-primary">contacter</span>`}
        description="Reservez votre seance, posez vos questions ou demandez un devis. Nous vous repondons sous 24h."
        classes={{ container: "min-h-[50vh]" }}
    />

    <GsapReveal animation="fadeUp">
        <FormSection title="" />
    </GsapReveal>

    <GsapReveal animation="fadeUp">
        <LocationMap />
    </GsapReveal>
</BaseLayout>
