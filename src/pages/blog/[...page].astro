---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import Headline from "../../components/ui/Headline.astro";
import Pagination from "../../components/ui/Pagination.astro";
import PostItem from "../../components/blog/PostItem.astro";
import type { GetStaticPathsOptions } from "astro";

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
    const blogEntries = await getCollection("blog");
    const sortedPosts = blogEntries
        .filter((post) => post.data && post.data.pubDate)
        .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

    return paginate(sortedPosts, { pageSize: 6 });
}

const { page } = Astro.props;
const blog = page.data;

const metadata = {
    title: "Blog — Conseils boxe, entraînement et bien-être",
    description: "Actualités, conseils et articles sur la boxe, l'entraînement et le bien-être par le studio Bis Repetita à Genève. Techniques, nutrition et mental.",
};
---

<BaseLayout metadata={metadata}>
    <section class="relative px-4 pt-24 pb-8 sm:px-6 lg:px-8 md:pb-12">
        <div class="absolute inset-0 z-0">
            <div
                class="absolute inset-0 bg-linear-to-br from-primary/5 via-transparent to-primary/3"
            >
            </div>
        </div>
        <div class="relative mx-auto max-w-5xl">
            <Headline
                tagline="Blog"
                title="Nos publications"
                subtitle="Actualites, conseils et articles sur la boxe, le bien-etre et la performance."
                classes={{
                    container: "mb-12 text-center",
                    title: "font-heading mb-4 text-4xl font-bold tracking-tight text-foreground md:text-6xl",
                    subtitle: "mx-auto max-w-3xl text-xl text-muted-foreground",
                }}
            />

            <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
                {blog.map((post) => <PostItem post={post} />)}
            </div>
            <Pagination page={page} />
        </div>
    </section>
</BaseLayout>
