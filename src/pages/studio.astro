---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/widgets/Hero.astro";
import Stats from "../components/widgets/Stats.astro";
import ContentShowcase from "../components/widgets/ContentShowcase.astro";
import EquipmentPanels from "../components/widgets/EquipmentPanels.astro";
import ServiceCard from "../components/widgets/ServiceCard.astro";
import Testimonials from "../components/widgets/Testimonials.astro";
import FAQ from "../components/widgets/FAQ.astro";
import CTABanner from "../components/widgets/CTABanner.astro";
import GsapReveal from "../components/widgets/GsapReveal.astro";
import SectionTitle from "../components/ui/SectionTitle.astro";
import Container from "../components/ui/Container.astro";
import Schema from "../components/seo/Schema.astro";
import { siteConfig } from "../config/site";

import { Image } from "astro:assets";
import studioHero from "../assets/studio-hero.webp";
import studioInterior from "../assets/studio-interior.webp";
import studioAtmosphere from "../assets/studio-atmosphere.webp";
import coursPortrait from "../assets/cours-portrait.webp";
import salle1 from "../assets/salle-1.webp";
import cours2Landscape from "../assets/cours-2-landscape.webp";
import homepage from "../assets/homepage.webp";
import imageCta from "../assets/image-cta.webp";
import footerSection from "../assets/footer-section.webp";

const metadata = {
    title: "Studio de Boxe Premium à Genève — La Voie-Creuse",
    description:
        "Studio de boxe premium au cœur de Genève (La Voie-Creuse 16, 1202). Ring pro, équipements haut de gamme, coaching personnalisé. Réservez votre séance.",
    ignoreTitleTemplate: true,
};

const stats = [
    {
        value: "5",
        label: "Coachs",
        description: "Une équipe passionnée et certifiée à votre service.",
    },
    {
        value: "500+",
        label: "Membres accompagnés",
        description: "Débutants et confirmés nous font confiance depuis 2010.",
    },
    {
        value: "150m²",
        label: "De surface",
        description: "Un espace entièrement dédié à la boxe, au cœur de Genève.",
    },
];

const services = [
    {
        title: "Coaching Privé",
        description:
            "Séances individuelles ou en petit groupe (jusqu'à 6 personnes) dans notre studio de boxe premium à Genève. Un programme sur mesure adapté à vos objectifs.",
        href: "/services/coaching-prive",
        image: coursPortrait,
        index: 1,
    },
    {
        title: "Round by Round",
        description:
            "Cours collectifs structurés en rounds de 3 minutes. Technique de boxe, cardio et renforcement dans l'ambiance unique de notre studio genevois.",
        href: "/services/round-by-round",
        image: salle1,
        index: 2,
    },
    {
        title: "Corporate",
        description:
            "Team building et programmes bien-être pour les entreprises. Accueillez vos équipes dans un espace premium au cœur de Genève.",
        href: "/services/corporate",
        image: studioAtmosphere,
        index: 3,
    },
];

const testimonials = [
    {
        quote: "Le studio Bis Repetita est un véritable écrin au cœur de Genève. L'ambiance, le ring, les équipements — tout respire la boxe premium.",
        name: "Laurent M.",
        role: "Dirigeant d'entreprise",
    },
    {
        quote: "J'ai testé plusieurs salles de boxe à Genève avant de trouver Bis Repetita. Ici, le niveau de qualité est incomparable.",
        name: "Sophie D.",
        role: "Avocate",
    },
    {
        quote: "Le studio est magnifique et l'encadrement exceptionnel. Nicolas pousse à se dépasser dans un cadre bienveillant.",
        name: "Marc T.",
        role: "CEO, startup tech",
    },
    {
        quote: "Un cadre premium et un coaching hors pair. Le meilleur studio de boxe que j'aie fréquenté à Genève.",
        name: "Claire B.",
        role: "Médecin",
    },
    {
        quote: "L'espace est top : ring pro, sacs de qualité, vestiaires impeccables. On sent le souci du détail partout.",
        name: "Thomas R.",
        role: "Entrepreneur",
    },
    {
        quote: "Après 6 mois au studio, j'ai gagné en confiance et en énergie. L'environnement premium fait toute la différence.",
        name: "Julie F.",
        role: "Architecte",
    },
];

const faqs = [
    {
        question: "Où se situe le studio Bis Repetita à Genève ?",
        answer: "Le studio est situé au <strong>La Voie-Creuse 16, 1202 Genève</strong>, à proximité de la gare Cornavin et des transports publics. Un parking est disponible à proximité.",
    },
    {
        question: "Faut-il un niveau minimum pour s'inscrire ?",
        answer: "Aucun niveau n'est requis. Que vous soyez débutant ou confirmé, nos programmes s'adaptent à vous : <a href='/services/coaching-prive' class='text-primary hover:underline'>coaching privé</a> pour un suivi personnalisé ou <a href='/services/round-by-round' class='text-primary hover:underline'>cours collectifs Round by Round</a> pour une expérience en groupe.",
    },
    {
        question: "Quel équipement dois-je apporter ?",
        answer: "Venez simplement avec une tenue de sport confortable et une bouteille d'eau. Les gants, bandes et tout le matériel d'entraînement sont fournis par le studio.",
    },
    {
        question: "Comment réserver une séance ?",
        answer: "Vous pouvez réserver directement via notre <a href='/contact' class='text-primary hover:underline'>formulaire de contact</a> ou par téléphone. Nous vous recommandons de commencer par une séance découverte pour vous familiariser avec le studio.",
    },
    {
        question: "Proposez-vous des programmes pour les entreprises ?",
        answer: "Oui, nous proposons des <a href='/services/corporate' class='text-primary hover:underline'>programmes corporate</a> sur mesure : team building, séances bien-être et événements d'entreprise dans notre studio premium à Genève.",
    },
];
---

<BaseLayout {metadata}>
    <Fragment slot="head">
        <Schema type="SportsActivityLocation" data={{ image: studioHero.src }} />
        <Schema type="FAQPage" data={{ faqs: faqs.map(f => ({ question: f.question, answer: f.answer.replace(/<[^>]*>/g, '') })) }} />
    </Fragment>

    {/* 1. Hero */}
    <Hero
        variant="centered"
        title={`Votre studio de <span class="text-primary">boxe premium</span><br/>au cœur de Genève`}
        description="Ring professionnel, équipements haut de gamme et coaching personnalisé par Nicolas de Boccard."
        image={studioHero}
        imageAlt="Studio de boxe premium Bis Repetita à Genève"
        locationBadge={{ text: "La Voie-Creuse 16, 1202 Genève" }}
        actions={[
            {
                text: "Découvrir le studio",
                href: "#acces",
            },
        ]}
    />

    {/* 1b. À propos du studio */}
    <GsapReveal animation="fadeUp">
        <section class="bg-white text-neutral-900 py-20 md:py-32">
            <div class="mx-auto max-w-7xl px-6 md:px-12 lg:px-20">
                <div class="md:flex items-center gap-16 lg:gap-24">
                    <div class="md:basis-1/2 flex items-center justify-center mb-12 md:mb-0">
                        <img src="/logo-grand.svg" alt="Logo Bis Repetita" width="260" height="260" class="w-full max-w-[200px] md:max-w-[260px] opacity-90" />
                    </div>
                    <div class="md:basis-1/2">
                        <span class="inline-block text-xs font-semibold uppercase tracking-widest text-primary mb-4">À propos</span>
                        <h2 class="text-3xl md:text-4xl font-bold text-neutral-900 mb-6">Bis Repetita — <span class="text-primary">la répétition comme philosophie</span></h2>
                        <p class="text-lg text-neutral-600 leading-relaxed mb-4">
                            Fondé en 2010 par Nicolas de Boccard, Bis Repetita est un studio de boxe premium au cœur de Genève. Notre nom est notre méthode : la maîtrise passe par la répétition.
                        </p>
                        <p class="text-neutral-600 leading-relaxed">
                            Depuis plus de 15 ans, Nicolas accompagne dirigeants, avocats, entrepreneurs et passionnés de tous niveaux. Ring professionnel, équipements haut de gamme, coaching certifié — chaque détail a été pensé pour offrir une expérience d'entraînement incomparable.
                        </p>
                    </div>
                </div>
            </div>
        </section>
    </GsapReveal>

    {/* 2. Accès & Infos pratiques */}
    <section id="acces" class="bg-white text-neutral-900">
        <div class="mx-auto max-w-7xl px-6 md:px-12 lg:px-20 py-20 md:py-32">
            <div class="mb-10 md:mb-14">
                <h2 class="text-3xl md:text-4xl font-bold text-neutral-900 mb-3">Un studio principal, des espaces partenaires</h2>
                <p class="text-lg text-neutral-500 max-w-3xl">Notre base est à La Voie-Creuse 16 — un espace privé, équipé d'un ring professionnel, conçu pour un entraînement sans compromis.</p>
                <p class="text-lg text-neutral-500 max-w-3xl mt-3">Pour ceux qui préfèrent un lieu en centre-ville, nous collaborons avec deux studios sélectionnés pour leur qualité&nbsp;:</p>
            </div>
            <div class="grid gap-8 lg:grid-cols-5 lg:gap-12">
                {/* Map — col gauche (3/5) */}
                <div class="lg:col-span-3 overflow-hidden rounded-2xl border border-neutral-200">
                    <iframe
                        src={siteConfig.maps.embedUrl}
                        width="100%"
                        height="100%"
                        style="border:0; min-height:420px;"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade"
                        title="Bis Repetita — Studio de boxe à Genève"
                    ></iframe>
                </div>

                {/* Infos — col droite (2/5) */}
                <div class="lg:col-span-2 flex flex-col gap-6">
                    {/* NAP */}
                    <div class="rounded-2xl bg-neutral-50 p-6">
                        <h3 class="mb-4 text-sm font-semibold uppercase tracking-wider text-neutral-900">Adresse</h3>
                        <div class="space-y-4">
                            <div class="flex items-start gap-3">
                                <svg class="mt-0.5 h-5 w-5 shrink-0 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a2 2 0 01-2.828 0l-4.243-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                                <span class="text-neutral-700">{siteConfig.contact.address}</span>
                            </div>
                            <div class="flex items-start gap-3">
                                <svg class="mt-0.5 h-5 w-5 shrink-0 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
                                <a href={`tel:${siteConfig.contact.phone.replace(/\s/g, '')}`} class="text-neutral-700 hover:text-primary transition-colors">{siteConfig.contact.phone}</a>
                            </div>
                            <div class="flex items-start gap-3">
                                <svg class="mt-0.5 h-5 w-5 shrink-0 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
                                <a href={`mailto:${siteConfig.contact.email}`} class="text-neutral-700 hover:text-primary transition-colors">{siteConfig.contact.email}</a>
                            </div>
                        </div>
                    </div>

                    {/* Accès */}
                    <div class="rounded-2xl bg-neutral-50 p-6">
                        <h3 class="mb-4 text-sm font-semibold uppercase tracking-wider text-neutral-900">Accès</h3>
                        <div class="space-y-4 text-neutral-700">
                            <div class="flex items-start gap-3">
                                <svg class="mt-0.5 h-5 w-5 shrink-0 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" /></svg>
                                <span>Bus 1, 25 — arrêt Sécheron</span>
                            </div>
                            <div class="flex items-start gap-3">
                                <svg class="mt-0.5 h-5 w-5 shrink-0 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" /></svg>
                                <span>Tram 15 — arrêt France</span>
                            </div>
                            <div class="flex items-start gap-3">
                                <svg class="mt-0.5 h-5 w-5 shrink-0 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" /></svg>
                                <span>Parking à proximité (Sécheron)</span>
                            </div>
                        </div>
                    </div>

                    {/* Horaires */}
                    <div class="rounded-2xl bg-neutral-50 p-6">
                        <h3 class="mb-4 text-sm font-semibold uppercase tracking-wider text-neutral-900">Horaires</h3>
                        <dl class="space-y-3 text-sm">
                            <div class="flex justify-between">
                                <dt class="text-neutral-500">Lundi — Vendredi</dt>
                                <dd class="font-medium text-neutral-900">7h – 21h</dd>
                            </div>
                            <div class="flex justify-between">
                                <dt class="text-neutral-500">Samedi</dt>
                                <dd class="font-medium text-neutral-900">9h – 17h</dd>
                            </div>
                            <div class="flex justify-between">
                                <dt class="text-neutral-500">Dimanche</dt>
                                <dd class="font-medium text-neutral-900">Fermé</dd>
                            </div>
                        </dl>
                    </div>
                </div>
            </div>

            {/* Studios partenaires */}
            <div class="mt-12 md:mt-16">
                <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
                    <div class="rounded-2xl border border-neutral-200 p-6 flex flex-col justify-between">
                        <div>
                            <h3 class="text-lg font-bold text-neutral-900">Improov Studio</h3>
                            <p class="text-sm text-neutral-500 mt-1">Ruelle du Couchant 11, Genève</p>
                        </div>
                        <a href="https://www.improov.ch" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1.5 text-sm font-medium text-primary hover:underline mt-4">
                            Découvrir le studio
                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
                        </a>
                    </div>
                    <div class="rounded-2xl border border-neutral-200 p-6 flex flex-col justify-between">
                        <div>
                            <h3 class="text-lg font-bold text-neutral-900">Fancy Studio</h3>
                            <p class="text-sm text-neutral-500 mt-1">Rue des Chaudronniers 8, Genève</p>
                        </div>
                        <a href="https://www.fancystudio.ch" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1.5 text-sm font-medium text-primary hover:underline mt-4">
                            Découvrir le studio
                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
                        </a>
                    </div>
                    <div class="rounded-2xl bg-neutral-900 p-6 flex flex-col justify-between">
                        <div>
                            <h3 class="text-lg font-bold text-white">Un autre lieu ?</h3>
                            <p class="text-sm text-white/60 mt-1">Nous avons accès à d'autres espaces à Genève.</p>
                        </div>
                        <a href="/contact" class="inline-flex items-center gap-1.5 text-sm font-medium text-primary hover:underline mt-4">
                            Contactez-nous
                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {/* 3. Stats */}
    <Stats
        id="stats"
        stats={stats}
        badge="L'équipe"
        badgeHref="/contact"
        intro="Une équipe de 5 coachs certifiés, unis par la passion du noble art. Plus de 500 membres nous font confiance depuis 2010 dans notre studio de 150m² au cœur de Genève."
    />

    {/* 3. Bento Gallery — Studio */}
    <section class="w-full pt-10 pb-2 px-2 md:pt-16 md:pb-3 md:px-3 bg-white">
        {/* Mobile: 2 cols simple */}
        <div class="grid md:hidden grid-cols-2 auto-rows-[160px] gap-2">
            <div class="col-span-2 row-span-2 relative rounded-2xl overflow-hidden group">
                <Image src={studioInterior} alt="Intérieur du studio Bis Repetita" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" widths={[600]} sizes="100vw" />
            </div>
            <div class="relative rounded-2xl overflow-hidden group">
                <Image src={salle1} alt="Salle d'entraînement" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" widths={[400]} sizes="50vw" />
            </div>
            <div class="relative rounded-2xl overflow-hidden group">
                <Image src={cours2Landscape} alt="Cours de boxe" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" widths={[400]} sizes="50vw" />
            </div>
            <div class="col-span-2 flex items-center justify-center rounded-2xl bg-background overflow-hidden">
                <span class="uppercase text-white whitespace-nowrap w-full text-center" style="font-family: 'LASVALLES', 'Roboto Condensed', sans-serif; font-size: 52vw; letter-spacing: 0.08em; line-height: 0.85;">BIS REPETITA</span>
            </div>
            <div class="relative rounded-2xl overflow-hidden group">
                <Image src={imageCta} alt="Entraînement de boxe" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" widths={[400]} sizes="50vw" />
            </div>
            <div class="relative rounded-2xl overflow-hidden group">
                <Image src={footerSection} alt="Studio Bis Repetita" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" widths={[400]} sizes="50vw" />
            </div>
            <div class="col-span-2 relative rounded-2xl overflow-hidden group">
                <Image src={studioAtmosphere} alt="Ambiance du studio" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" widths={[600]} sizes="100vw" />
            </div>
        </div>

        {/* Desktop: creative 4-col bento */}
        <div class="hidden md:grid bento-gallery gap-3">
            {/* A — Large (2×2) top-left */}
            <div class="relative rounded-2xl overflow-hidden group" style="grid-area: a">
                <Image src={studioInterior} alt="Intérieur du studio de boxe Bis Repetita" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" widths={[600, 1000]} sizes="50vw" />
            </div>
            {/* B — Small top-center */}
            <div class="relative rounded-2xl overflow-hidden group" style="grid-area: b">
                <Image src={salle1} alt="Salle d'entraînement" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" widths={[400, 700]} sizes="25vw" />
            </div>
            {/* C — Tall (1×2) top-right */}
            <div class="relative rounded-2xl overflow-hidden group" style="grid-area: c">
                <Image src={coursPortrait} alt="Coaching de boxe" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" widths={[400, 700]} sizes="25vw" />
            </div>
            {/* D — Small center */}
            <div class="relative rounded-2xl overflow-hidden group" style="grid-area: d">
                <Image src={cours2Landscape} alt="Cours de boxe en action" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" widths={[400, 700]} sizes="25vw" />
            </div>
            {/* E — Small left */}
            <div class="relative rounded-2xl overflow-hidden group" style="grid-area: e">
                <Image src={imageCta} alt="Entraînement de boxe" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" widths={[400, 700]} sizes="25vw" />
            </div>
            {/* BRAND — White card, 3 cols */}
            <div class="flex items-center justify-center rounded-2xl bg-background overflow-hidden" style="grid-area: brand">
                <span class="uppercase text-white whitespace-nowrap w-full text-center" style="font-family: 'LASVALLES', 'Roboto Condensed', sans-serif; font-size: 21vw; letter-spacing: 0.08em; line-height: 0.85;">BIS REPETITA</span>
            </div>
            {/* F — Tall (1×2) bottom-left */}
            <div class="relative rounded-2xl overflow-hidden group" style="grid-area: f">
                <Image src={footerSection} alt="Studio Bis Repetita Genève" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" widths={[400, 700]} sizes="25vw" />
            </div>
            {/* G — Small */}
            <div class="relative rounded-2xl overflow-hidden group" style="grid-area: g">
                <Image src={homepage} alt="Vue d'ensemble du studio" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" widths={[400, 700]} sizes="25vw" />
            </div>
            {/* H — Large (2×2) bottom-right */}
            <div class="relative rounded-2xl overflow-hidden group" style="grid-area: h">
                <Image src={studioAtmosphere} alt="Ambiance du studio Bis Repetita" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" widths={[600, 1000]} sizes="50vw" />
            </div>
            {/* I — Small */}
            <div class="relative rounded-2xl overflow-hidden group" style="grid-area: i">
                <Image src={studioHero} alt="Studio de boxe premium Genève" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" widths={[400, 700]} sizes="25vw" />
            </div>
        </div>
    </section>

    <style>
        .bento-gallery {
            grid-template-columns: repeat(4, 1fr);
            grid-template-rows: 260px 260px 260px 260px;
            grid-template-areas:
                "a a b c"
                "a a d c"
                "e brand brand brand"
                "f g h h"
                "f i h h";
        }
    </style>

    {/* 5. Équipements — Panneaux interactifs */}
    <GsapReveal animation="fadeUp">
        <EquipmentPanels />
    </GsapReveal>

    {/* 7. ServiceCards — 3 programmes */}
    <Container class="py-20 md:py-32">
        <SectionTitle
            badge="Nos programmes"
            title="Trouvez la formule <span class='text-primary'>qui vous correspond</span>"
            class="mb-12"
        />
        <div class="grid gap-8 md:grid-cols-3 gsap-stagger-cards">
            {services.map((service, i) => (
                <ServiceCard service={service} index={i + 1} />
            ))}
        </div>
        <div class="mt-10 text-center">
            <a href="/tarifs" class="text-primary hover:underline font-medium">
                Voir nos tarifs &rarr;
            </a>
        </div>
    </Container>

    {/* 8. Testimonials */}
    <GsapReveal animation="fadeUp">
        <Testimonials
